<!-- Add Person Modal -->
<div id="add-person-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
  <div class="bg-white rounded-xl shadow-xl max-w-md w-full">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Add New Person</h3>
        <button id="close-add-person-modal" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form id="add-person-form" class="space-y-4">
        <div>
          <label for="person-name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
          <input 
            type="text" 
            id="person-name" 
            name="name" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter person's name"
          >
        </div>
        
        <div>
          <label for="person-birthdate" class="block text-sm font-medium text-gray-700 mb-2">Birth Date</label>
          <input 
            type="date" 
            id="person-birthdate" 
            name="birthDate" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
        </div>
        
        <div>
          <label for="person-group" class="block text-sm font-medium text-gray-700 mb-2">Group</label>
          <select 
            id="person-group" 
            name="groupId" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
            <option value="">Select a group</option>
          </select>
        </div>
        
        <div class="flex space-x-3 pt-4">
          <button 
            type="button" 
            id="cancel-add-person"
            class="flex-1 px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors duration-200"
          >
            Cancel
          </button>
          <button 
            type="submit"
            class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors duration-200"
          >
            Add Person
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
