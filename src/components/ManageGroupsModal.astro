<!-- Manage Groups Modal -->
<div id="manage-groups-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
  <div class="bg-white rounded-xl shadow-xl max-w-md w-full">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Manage Groups</h3>
        <button id="close-manage-groups-modal" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Add New Group Form -->
      <form id="add-group-form" class="space-y-4 mb-6">
        <div>
          <label for="group-name" class="block text-sm font-medium text-gray-700 mb-2">Group Name</label>
          <input 
            type="text" 
            id="group-name" 
            name="name" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter group name"
          >
        </div>
        
        <div>
          <label for="group-color" class="block text-sm font-medium text-gray-700 mb-2">Color</label>
          <div class="flex space-x-2">
            <input 
              type="color" 
              id="group-color" 
              name="color" 
              value="#3b82f6"
              class="w-12 h-10 border border-gray-300 rounded-lg cursor-pointer"
            >
            <input 
              type="text" 
              id="group-color-text"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="#3b82f6"
              value="#3b82f6"
            >
          </div>
        </div>
        
        <button 
          type="submit"
          class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors duration-200"
        >
          Add Group
        </button>
      </form>
      
      <!-- Existing Groups -->
      <div>
        <h4 class="text-sm font-medium text-gray-700 mb-3">Existing Groups</h4>
        <div id="groups-list" class="space-y-2">
          <!-- Groups will be inserted here -->
        </div>
      </div>
    </div>
  </div>
</div>
